{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES2018",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "types",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "spec",
    "demos",
    "test"
  ],
  "include": [
    "src"
  ],
  "types": [
    "node"
  ]
}