{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES2018",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "types",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020"],
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "spec",
    "frameworks",
    "demos",
    "test",
    "resources"
  ],
  "include": [
    "src"
  ],
  "types": [
    "node",
    "postman-collection"
  ]
}